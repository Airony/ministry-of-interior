{% macro textfield(label, placeholder = '', class = '', size = null, params = '') %}
    <div class="textfield {{class}}">
        <label for="{{label}}" class='label'>
            {{label}}
        </label>
        <input type="text" for="{{label}}" {{params}} placeholder="{{placeholder}}"class='text-input'
        {% if size %}
            size={{size}}
        {% endif %}
        >
    </div>
{% endmacro %}
{% macro textarea(label, placeholder = '', class = '', size = null, params = '') %}
    <div class="textfield textarea {{class}}">
        <label for="{{label}}" class='label'>
            {{label}}
        </label>
        <textarea type="text" for="{{label}}" placeholder="{{placeholder}}" {{params}} class='text-input'
        {% if size %}
            size={{size}}
        {% endif %}
></textarea>
    </div>
{% endmacro %}
{% macro radioButton(label, name, value, id, class = '', params = '') %}
    <div class="radio-button {{class}}">
        <input type="radio" id="{{id}}" name="{{name}}" value="{{value}}" {{params}}>
        <label for={{id}}>{{label}}</label>
    </div>
{% endmacro %}