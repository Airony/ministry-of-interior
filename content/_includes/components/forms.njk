{% macro textfield(label, placeholder = '', class = '') %}
    <div class="textfield {{class}}">
        <label for="{{label}}" class='label'>
            {{label}}
        </label>
        <input type="text" for="{{label}}" placeholder="{{placeholder}}"class='text-input'>
    </div>
{% endmacro %}
{% macro textarea(label, placeholder = '', class = '') %}
    <div class="textfield textarea {{class}}">
        <label for="{{label}}" class='label'>
            {{label}}
        </label>
        <textarea type="text" for="{{label}}" placeholder="{{placeholder}}"class='text-input'></textarea>
    </div>
{% endmacro %}
{% macro radioButton(label, name, value, id, class = '', checked = false) %}
    <div class="radio-button {{class}}">
        <input type="radio" id={{id}} name={{name}} value={{value}}
    {{"checked" if checked else ""}}>
        <label for={{id}}>{{label}}</label>
    </div>
{% endmacro %}