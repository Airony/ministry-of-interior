{% macro searchBar(placeholder = 'Search', class = '', id = '') %}
    <div class="search-bar {{class}}"
    {{"id=" + id if id }}>
        <input
          type="text"
          name="Search Term"
          class="text-input input-field search-bar__input"
          placeholder="{{placeholder}}"
          size="1"/>

        <button class="btn-primary search-bar__btn">
            <i class="icon icon-small">
                {% include '../../assets/icons/search.svg' %}
            </i>
        </button>
    </div>
{% endmacro %}